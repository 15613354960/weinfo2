/* .index-wrap-bg{background-color: #fff;} */
.bgfff{background-color: #fff;}
.index-wrap{position: relative;}
.head-image{width: 100%;}
.index-search-wrap{
  position: absolute;
  top: 200rpx;
  width: 100%;
  }
.index-search{
  width: 90%;
  height: 80rpx;
  border: 1rpx solid #7791c3;
  border-radius: 48rpx;
  background-color: #f7f7f7;
  margin: 0 auto;
}
.search-input{
  width: 520rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 30rpx;
}
.search-image{
  margin-right: 20rpx;
  margin-top: 10rpx;
  width: 64rpx;
  height: 62rpx;
}
.venues_box{
  width: 90%;
  margin: 0 auto;
}
.venues_item{
  width: 16.5%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}
.venues_tit{
  color: #666;
}
view.text{padding-top: 30rpx;} 
.ptop0{padding-top: 0!important;}
view.text:before {
    position: absolute;
    display: block;
    content: ' ';
    left: -5rpx;
    width: 2px;
    height: 100%;
    background-color: #09bb07;
}

.line_flag {
    width: 3px;
    height: 15px;
    display: inline-block;
    background-color: #f9f027;
}

view.text text {
    margin-left: 10px;
    line-height: 18px;
    font-weight: bold;
    color: #72a8fc;
}

.tool_box {
    padding: 0 10rpx;
}
.tool_item {
    display: inline-block;
    width: 24%;
    margin: 0 0.5%;
}
.tool_item image{
    display: block;
    width: 134rpx;
    height: 134rpx;
    margin: 20rpx auto 10rpx;
}
.tool_item text{
  display: block;
  font-size: 28rpx;
  text-align: center;
  padding-bottom: 24rpx;
}
.index-change-list{width: 90%;margin: 0 auto;padding-top: 20rpx;padding-bottom: 20rpx;}
.index-change-list text{line-height: 52rpx;}
.index-smail-icon{width: 20rpx;height: 20rpx;}
.change-notice{font-size: 24rpx;color: #999}
.index-change-wrap{width: 75%;}
.change-list-image{width: 130rpx;height: 130rpx;}
.mt14{margin-top: 14rpx;}
.top1ef{border-top: 1rpx solid #efefef;}